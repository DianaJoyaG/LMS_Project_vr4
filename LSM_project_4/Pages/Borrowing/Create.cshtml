@page
@model CreateBorrowingModel

<h2>Create a New Borrowing</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Borrowing.IDBook" class="control-label">Book</label>
        <select asp-for="Borrowing.IDBook" asp-items="Model.Books" class="form-control">
            <option value="">-- Select Book --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Borrowing.IDReader" class="control-label">Reader</label>
        <select asp-for="Borrowing.IDReader" asp-items="Model.Readers" class="form-control">
            <option value="">-- Select Reader --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Borrowing.BorrowedDate" class="control-label">Borrowed Date</label>
        <input asp-for="Borrowing.BorrowedDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Borrowing.ReturnedDate" class="control-label">Returned Date</label>
        <input asp-for="Borrowing.ReturnedDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>


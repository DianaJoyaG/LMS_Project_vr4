@page "{id:int}"
@model DeleteReaderModel

<h2>Delete Reader</h2>

<form method="post">
    <input type="hidden" asp-for="Reader.IDReader" />
    <div>
        <h4>Are you sure you want to delete this reader?</h4>
        <div>
            <p><strong>ID:</strong> @Model.Reader.IDReader</p>
            <p><strong>Name:</strong> @Model.Reader.NameReader</p>
        </div>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index">Cancel</a>
</form>

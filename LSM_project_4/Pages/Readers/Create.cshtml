@page
@model CreateReaderModel

<h2>Create New Reader</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Reader.NameReader" class="control-label"></label>
        <input asp-for="Reader.NameReader" class="form-control" />
        <span asp-validation-for="Reader.NameReader" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="./Index">Cancel</a>
</form>
